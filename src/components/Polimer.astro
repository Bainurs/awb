---
// src/components/Polimer.astro
import localImg from "../assets/tooltip_info.webp";
import PolymerCard from "./reactComponents/polymerCard";

const polimerProps = [
    {text: 'Экологичность', subtitle: 'Степень очистки от вредных выборосов угольных котельных выше 90%'},
    {text: 'Надежность', subtitle: 'Все оборудования от лучших фирм производителей'},
    {text: 'Инновационность', subtitle: 'Все процессы максимально автоматизированы'},
    {text: 'Пожаробезопасность', subtitle: 'Все котельные оснащены автоматической охранно-пожарной сигнализацией и модулем пожаротущения'},
    {text: 'Гарантия', subtitle: 'Горантия на все оборудования до 2-х лет'},
    {text: 'Ответственность', subtitle: 'Срок службы более 15 лет'},
    {text: 'Обучение', subtitle: 'Обучим ваш персонал для максимально качественной и  бесперебойной работы котельной'},
    
]

const tooltipImg = localImg.src;
---

<div class="container mx-auto polimer">
    <div class="wrap flex flex-wrap">
        <div class="lg:w-5/12 md:w-full px-4">
            <div class="flex relative z-10 desc">
                <div class="flex flex-col desc-in">
                    <h2 class="title text-white">
                        Консультация по котельным и оборудованию
                    </h2>
                    <p class="text relative text-white">
                        Менеджеры компании с радостью ответят на ваши вопросы и произведут расчет стоимости котельной или котельного оборудования. 
                        Подготовят индивидуальное коммерческое предложение.
                    </p>
                    <form action="mail.php" method="POST" id="appl_form2" name="appl_form2" class="o-form needs-validation" novalidate="">
                        <h3 class="title text-white">Хотите узнать больше, оставьте номер мы вам перезвоним</h3>
                        <div class="flex flex-wrap justify-center">
                            <div class="md:w-10/12 md:px-4">
                                <div class="form-group md:mb-4">
                                    <input type="text" class="block w-full text-base font-normal form-control phone form-control-sh" name="user_phone" placeholder="+ 996 (___)__ __ __" required="">
                                </div>
                            </div>
                            <div class="md:w-10/12 md:px-4">
                                <div class="form-group mb-0">
                                        <button type="submit" name="submit" class="relative text-white btn btn-green">
                                            <span class="btn-blik"></span>Отправить
                                        </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="lg:w-7/12 md:w-full z-0 px-4 relative">
            <div class="polimer-props z-0 flex absolute">
                {
                    polimerProps.map((item, index) => (
                        <PolymerCard client:load item={item} localImg={tooltipImg} index={index} href="../assets/docs/oprosnyy_list.docx" />
                    ))
                }
            </div>
        </div>
    </div>
</div>