---
import Slider from './Slider.jsx';
import buildKotlImg from '../../assets/slider/banner/build-kotl.webp';
import parKotlImg from '../../assets/slider/banner/par-kotl.webp';
import prUglKotlImg from '../../assets/slider/banner/pr-ugl-kotl.webp';

const slides = [
    {img: buildKotlImg.src, title: 'Модульные котельные'}, 
    {img: parKotlImg.src, title: 'Промышленные котлы'}, 
    {img: prUglKotlImg.src, title: 'Твердотопливные котлы'}
];
const settings = {
    slidesPerView: 1,
    autoplay: 4000
}
---

<Slider slides={slides} sliderSettings={settings} client:load />
