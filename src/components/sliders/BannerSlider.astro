---
import Slider from '../reactComponents/Slider.jsx';
import buildKotlImg from '../../assets/slider/banner/build-kotl.webp';
import parKotlImg from '../../assets/slider/banner/par-kotl.webp';
import prUglKotlImg from '../../assets/slider/banner/pr-ugl-kotl.webp';

const slides = [
    {id:1, img: buildKotlImg.src, title: 'Модульные котельные', banner: true}, 
    {id:2, img: parKotlImg.src, title: 'Промышленные котлы', banner: true}, 
    {id:3, img: prUglKotlImg.src, title: 'Твердотопливные котлы', banner: true}
];
const sliderSettings = {
    slidesPerView: 1,
    autoplay: 100000,
    spaceBetween: 50,
    effect: 'fade',
    button: 'banner'
}
---

<Slider client:load {slides} {sliderSettings} />
